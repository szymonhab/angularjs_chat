{% extends 'base.html.twig' %}

{% block body %}
  <div ng-controller="PhoneListCtrl">
    Homepage.

    <ul>
      <li ng-repeat="phone in phones">
        <span>{[{ phone.name }]}</span>
        <p>{[{ phone.snippet }]}</p>
      </li>
    </ul>
    
    <p>Total number of phones: {[{ phones.length }]}</p>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/index.js') }}"></script>
{% endblock %}
